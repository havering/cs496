<p id="notice"><%= notice %></p>

<h1>Recipes</h1>

<table class="table table-striped table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <!--<th>Instructions</th>-->
    <!--<th>Servings</th>-->
    <!--<th>Cook time</th>-->
    <th colspan="3">Actions</th>
  </tr>
  </thead>

  <tbody>
  <% @recipes.each do |recipe| %>
    <tr>
      <td><%= link_to(recipe.name, recipe_path(recipe)) %></td>
      <td><%= recipe.description %></td>
      <!--<td><%= recipe.instructions %></td>-->
      <!--<td><%= recipe.servings %> people</td>-->
      <!--<td><%= recipe.cook_time %> minutes</td>-->

      <% if recipe.user_id == current_user.id %>
        <td><%= link_to 'Show', recipe %></td>
        <td><%= link_to 'Edit', edit_recipe_path(recipe) %></td>
        <td><%= link_to 'Destroy', recipe, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      <% else %>
        <td colspan="3"><%= link_to 'Show', recipe %></td>
      <% end %>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_recipe_path %>
