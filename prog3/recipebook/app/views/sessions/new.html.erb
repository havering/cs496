<% if flash[:notice] %>
    <div class="notice"><%= flash[:notice] %></div>
  <% end %>
  <br>
<div id="loginreg">
<%= form_for(:session, url: login_path) do |f| %>
    <%= f.text_field :username, :placeholder => "Username" %><br>
    <%= f.password_field :password, :placeholder => "Password" %>
    <p><%= f.submit "Log in", class: "btn-submit" %></p>
<% end %>
</div>