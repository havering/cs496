<!DOCTYPE html>
<html>
<head>
  <title>Recipebook</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>
<div id="main-container" class="container">
  <div class="row">
    <div class="col-xs-2" id="sidebar">
      <h3>Recipe Retriever</h3>
      <%= link_to("Home", root_path) %><br>
      <% if current_user %>
        <%= link_to("My Profile", user_path(current_user)) %><br>
        <%= link_to("My Recipes", user_recipes_path(current_user)) %><br>
        <%= link_to("Members", users_path) %><br>
        <%= link_to("Logout", logout_path) %>
      <% else %>
        <%= link_to("Login", login_path) %><br>
        <%= link_to("Sign Up", signup_path) %>
      <% end %>
      <div id="spacer"></div>
    </div>
    <div class="col-xs-9">
      <%= yield %>
    </div>
  </div>
</div>
</body>
</html>
